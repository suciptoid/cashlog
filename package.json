{
  "name": "cashlog",
  "private": true,
  "sideEffects": false,
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:deploy": "npm run build && node functions/install.js && firebase deploy",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outfile=server.js",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "firebase serve",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cover": "vitest --coverage",
    "test:ui": "vitest --watch --ui",
    "emulator": "firebase emulators:start --project cashlog --only auth,database,firestore,ui --export-on-exit .firebase/emulator --import .firebase/emulator",
    "emulator:export": "firebase emulators:export .firebase/emulator -f"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^1.0.6",
    "@remix-run/express": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "dayjs": "^1.11.5",
    "firebase": "^9.9.4",
    "firebase-admin": "^11.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@vitest/ui": "^0.23.1",
    "autoprefixer": "^10.4.8",
    "c8": "^7.12.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.23.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vitest": "^0.23.1"
  },
  "workspaces": [
    "functions"
  ],
  "engines": {
    "node": ">=14"
  }
}
