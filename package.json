{
  "name": "cashlog",
  "private": true,
  "sideEffects": false,
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:deploy": "npm run build && node functions/install.js && firebase deploy",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outfile=server.js",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "firebase serve",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cover": "vitest --coverage",
    "test:ui": "vitest --watch --ui",
    "emulator": "firebase emulators:start --project cashlog --only auth,database,firestore,ui --export-on-exit .firebase/emulator --import .firebase/emulator",
    "emulator:export": "firebase emulators:export .firebase/emulator -f"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.12",
    "@radix-ui/react-dialog": "^1.0.2",
    "@remix-run/express": "^1.7.2",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "dayjs": "^1.11.5",
    "firebase": "^9.12.0",
    "firebase-admin": "^11.1.0",
    "nanoid": "^4.0.0",
    "qs": "^6.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@vitest/coverage-c8": "^0.24.1",
    "@vitest/ui": "^0.24.1",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "vitest": "^0.24.1"
  },
  "workspaces": [
    "functions"
  ],
  "engines": {
    "node": ">=14"
  }
}